mixin article(title, date, article_path)
  article
    .row.article-header
      .col-md-12
        h1.post-title
            a(href="/" + article_path)= title
      .col-md-12
        i.fa.fa-calendar.fa-lighter
        = " " + moment(date, "YYYY-MM-DD HH:mm").format("MMMM DD YYYY")
    .row.justified
      .col-md-12
        block

mixin article_excerpt(title, date, article_path)
  article
    .row.article-header
      .col-md-9
        h2.post-title
            a(href="/" + article_path)= title
      .col-md-3
        span.pull-xs-right
          i.fa.fa-calendar.fa-lighter
          = " " + moment(date, "YYYY-MM-DD HH:mm").format("MMMM DD YYYY")
    .row.justified
      .col-md-12
        block

